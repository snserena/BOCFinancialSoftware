<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--底部导航栏样式-->
    <style name="tab_layout_text_appearance">
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">@color/common_text_gray</item>
    </style>

    <!-- activity微大字体 黑色 -->
    <style name="activity_text_normal_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>

    <!-- activity微大字体 黑色 -->
    <style name="activity_text_medium_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>

    <!-- activity大字体 黑色 -->
    <style name="activity_text_big_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_text_black</item>
    </style>

    <!-- activity正常字体 灰色 -->
    <style name="activity_text_normal_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/common_text_gray</item>
    </style>

    <!-- activity小字体 灰色 -->
    <style name="activity_text_small_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/common_text_gray</item>
    </style>

</resources>
